<div class="content_login">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <nav>
      <%= link_to "<", :back %>
      <%= link_to "Home", '/' %>
    </nav>
    <div>
      <div class='shared_link'>
        <%= f.label :email, "Forgot your password?" %>
      </div>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email" %>
    </div>
    <%= f.submit "Send me reset password instructions", class: "log_in reset_button" %>
    <%= render "devise/shared/error_messages", resource: resource %>
  <% end %>

  <div class='shared_link'>
  <%= link_to "Didn't receive confirmation instructions?", new_user_confirmation_path(resource_name) %>
  </div>
</div>
